@model Roomax.Models.User

@{
    ViewBag.Title = "Create";
}


<div class="row">
    <h1>Nouvel Utilisateur</h1>
</div>

<div class="container">
    @using (Html.BeginForm("Create", "Users", System.Web.Mvc.FormMethod.Post))
    {
        <div class="row form-group">
