        </div>

        <div class="row form-group">
            @Html.LabelFor(x => x.Mail, new { @class = "col-3" })
            @Html.EditorFor(x => x.Mail, null, new { htmlAttributes = new { @class = "form-control col-4" } })
            @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger" })
        </div>

        <div class="row form-group">
            @Html.LabelFor(x => x.BirthDate, new { @class = "col-3" })
            @Html.EditorFor(x => x.BirthDate, null, new { htmlAttributes = new { @class = "form-control col-4" } })
            @Html.ValidationMessageFor(x => x.BirthDate, "", new { @class = "text-danger" })
        </div>

        <div class="row form-group">
            @Html.LabelFor(x => x.Password, new { @class = "col-3" })
