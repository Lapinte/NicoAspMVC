@model Roomax.Models.User

@{
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
    ViewBag.Title = "Create";
}

@section SectionTitle{
    <h2>Nouvel Utilisateur</h2>
}

    <div class="container">
        @using (Html.BeginForm("Create", "Users", System.Web.Mvc.FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.CivilityID, new { @class = "col-12" })
                @Html.DropDownListFor(x => x.CivilityID, new SelectList(ViewBag.Civilities, "ID", "Label"), new { @class = "form-control" }) 
                @Html.ValidationMessageFor(x => x.CivilityID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.LastName, new { @class = "col-12" })
                @Html.EditorFor(x => x.LastName, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.FirstName, new { @class = "col-12" })
                @Html.EditorFor(x => x.FirstName, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Mail, new { @class = "col-12" })
                @Html.EditorFor(x => x.Mail, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.BirthDate, new { @class = "col-12" })
                @Html.EditorFor(x => x.BirthDate, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.BirthDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Password, new { @class = "col-12" })
                @Html.EditorFor(x => x.Password, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.ComfirmedPassword, new { @class = "col-12" })
                @Html.EditorFor(x => x.ComfirmedPassword, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.ComfirmedPassword, "", new { @class = "text-danger" })
            </div>

            <div class="row form-group justify-content-center">
                <button type="submit" class="btn btn-outline-success col-7">--- === Ajouter === ---</button>
            </div>
        }
    </div>

@section SectionScripts{
    <script></script>
}



